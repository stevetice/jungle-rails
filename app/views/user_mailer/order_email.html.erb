<h1>Thanks for your order</h1>
  <section class="orders-show">
    <header class="page-header">
      <h1>Order #<%= @order.id %></h1>
    </header>
      <h4>This order was placed by user <%= @order.email %>. Thank you for your order!</h4>
      <div class="panel panel-default items">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Product</th>
              <th>Unit Price</th>
              <th>Quantity</th>
              <th>Price</th>
            </tr>
          </thead>
          <tbody>
            <% @order.line_items.each do | line_item | %>
              <tr>
                <td>
                  <%= image_tag line_item.product.image.tiny %>
                </td>
                <td>
                  <h4><%= line_item.product.name %></h4>
                  <br>
                  <p><%= line_item.product.description %></p>
                </td>
                <td>
                  <%= number_to_currency(line_item.product.price) %>
                </td>
                <td>
                  <%= line_item.quantity %>
                </td>
                <td>
                  <%= number_to_currency(line_item.total_price_cents/100.00) %>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <th colspan="4">
                TOTAL:
              </th>
              <th>
                <%= number_to_currency(@order.total_cents/100.00) %>
              </th>
            </tr>
          </tfoot>
        </table>
      </div>
  </section>
